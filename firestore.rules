rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read of reports publicly
    match /reports/{reportId} {
      allow read: if true;
      // Allow create for anonymous uploads with validation
      allow create: if request.resource.data.keys().hasAll(["title","description","region","createdAt"]) &&
                  request.resource.data.title is string && request.resource.data.description is string &&
                  request.resource.data.region is string && request.resource.data.createdAt is timestamp;
      // No updates or deletes allowed from client
      allow update, delete: if false;
    }
  }
}